<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <ImageView
            android:layout_width="32dp"
            android:layout_height="0dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/result_image"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="2dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/result_image"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.0">
        <TextView
                android:text="Header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/result_header" android:textSize="24sp"/>
        <TextView
                android:text="Result body text."
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/result_body"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>